@model IEnumerable<OrtofoneTrainingShop.Models.ViewModels.Account.OrdersForUserVM>

@{
    ViewBag.Title = "Zamówienie";
}

<h2>Zamówienia</h2>

@if (!Model.Any())
{
    <h3 class="text-center">Nie masz żadnych zamówien</h3>
}
else
{
    <table class="table">
        <tr>
            <th>
                Numer zamówienia
            </th>
            <th>
                Szczegóły zamówienia
            </th>
            <th>
                Utworzone
            </th>
            <th>
                Wartość
            </th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>
            <td>
                @foreach (var item2 in item.ProductsAndQty)
                {
                    @item2.Key @:x @item2.Value <br />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
        </tr>
        }

    </table>
}